{
  "name": "locale-switcher",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/locale-switcher/locale-switcher/",
  "scripts": {
    "prepare": "shx sed -i 's/\\*zoom/zoom/g' node_modules/tachyons/css/tachyons.min.css",
    "check": "tsc",
    "locales:download": "node scripts/download-locales.mjs",
    "clean": "shx rm -rf dist .parcel-cache web-ext-artifacts",
    "dev": "parcel watch --target dev --no-hmr ./manifest.json",
    "build": "parcel build --target prod ./manifest.json",
    "pack": "web-ext build -s dist/prod --overwrite-dest",
    "dist": "run-s check clean build pack"
  },
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {
      "sourceMap": false
    }
  },
  "dependencies": {
    "fuse.js": "^6.6.2",
    "locale-emoji": "^0.3.0",
    "sortablejs": "^1.15.0",
    "tachyons": "^4.12.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.8.0",
    "@parcel/core": "^2.8.0",
    "@types/webextension-polyfill": "^0.8.3",
    "axios": "^1.1.3",
    "jsdom": "^20.0.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.8.0",
    "parcel-transformer-svelte": "^1.2.3",
    "postcss": "^8.4.19",
    "shx": "^0.3.4",
    "svelte": "^3.53.1",
    "svelte-preprocess": "^4.10.7",
    "typescript": "^4.8.4",
    "web-ext": "^7.3.1"
  }
}
