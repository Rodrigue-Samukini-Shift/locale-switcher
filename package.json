{
  "name": "locale-switcher",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/locale-switcher/locale-switcher/",
  "scripts": {
    "check": "tsc",
    "locales:download": "curl https://raw.githubusercontent.com/umpirsky/locale-list/master/data/en/locales.json | sed 's/_/-/g' > ./src/popup/lib/locales.json",
    "clean": "rm -rf dist .parcel-cache web-ext-artifacts locale-switcher.zip",
    "dev": "parcel watch --target dev --no-hmr ./manifest.json",
    "build": "parcel build --target prod ./manifest.json",
    "dist": "run-s check clean build pack:*",
    "pack:zip": "zip -r ./locale-switcher.zip dist/prod/*",
    "pack:ff": "web-ext build -s dist/prod --overwrite-dest"
  },
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {}
  },
  "dependencies": {
    "fuse.js": "^6.4.6",
    "locale-emoji": "^0.3.0",
    "tachyons": "^4.12.0",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "@parcel/core": "^2.0.1",
    "@types/lodash": "^4.14.178",
    "@types/webextension-polyfill": "^0.8.2",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "parcel-transformer-svelte": "^1.2.3",
    "svelte": "^3.44.3",
    "svelte-preprocess": "^4.10.1",
    "typescript": "^4.5.4",
    "web-ext": "^6.6.0"
  }
}
