{
  "name": "locale-switcher",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/locale-switcher/locale-switcher/",
  "scripts": {
    "check": "tsc",
    "locales:download": "node scripts/download-locales.mjs",
    "clean": "rm -rf dist .parcel-cache web-ext-artifacts",
    "dev": "parcel watch --target dev --no-hmr ./manifest.json",
    "build": "parcel build --target prod ./manifest.json",
    "pack": "web-ext build -s dist/prod --overwrite-dest",
    "dist": "run-s check clean build pack"
  },
  "targets": {
    "dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {}
  },
  "dependencies": {
    "fuse.js": "^6.5.3",
    "locale-emoji": "^0.3.0",
    "sortablejs": "^1.14.0",
    "tachyons": "^4.12.0",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.3.2",
    "@parcel/core": "^2.3.2",
    "@types/webextension-polyfill": "^0.8.2",
    "axios": "^0.24.0",
    "jsdom": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.3.2",
    "parcel-transformer-svelte": "^1.2.3",
    "postcss": "^8.4.7",
    "svelte": "^3.46.4",
    "svelte-preprocess": "^4.10.4",
    "typescript": "^4.5.5",
    "web-ext": "^6.7.0"
  }
}
